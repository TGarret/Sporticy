<div class="row">
    <div class="col-md-3">
        <ul class="sidebar-list">
            <li class="sidebar-item"><%= link_to "Mes activités", activities_path, class:"sidebar-link" %></li>
            <li class="sidebar-item"><%= link_to "Mes réservations", mes_reservations_path, class:"sidebar-link active" %></li>
            <li class="sidebar-item"><%= link_to "Mes expériences", mes_experiences_path, class:"sidebar-link" %></li>
        </ul>
    </div>
    <div class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading"> Mes réservations</div>
            <div class="panel-body">
              <%@activities.each do |activity| %>
                <% activity.reservations.order("id DESC").each do |reservation| %>
                <div class="row">
                   <div class="col-md-2">
                       Le <%= reservation.date.strftime('%d.%m.%y') %>
                   </div>
                   <div class="col-md-6">
                       <%= link_to activity_path(reservation.activity) do %>
                           <%= image_tag reservation.activity.photos[0].image.url(:thumb) if reservation.activity.photos.length > 0 %>
                       <% end %>
                   </div>
                   <div class="col-md-2">
                       <%= link_to user_path(reservation.activity.user) do %>
                           <%= image_tag avatar_url(reservation.activity.user), class:"img-circle avatar-medium" %>
                       <% end %>
                   </div>
                   <div class="col-md-2 right">
                       <h4><%= reservation.total %> €</h4>
                   </div>
                </div>
                <hr>
                <% end %>
                <%end%>
            </div>
        </div>
    </div>
</div>


