<div class="bloc1" style="background: linear-gradient(#2CFFFE, #515B88); height: 45vh;">
<div class="row">
  <div class="col-md-12">
    <div class="text-center">

      <h1 style="color: white; padding-top: 69px;">Le plus grand choix <br> d'activités de loisirs sportif</h1>

    </div>
  </div>
</div>

<br>

<%= form_tag search_path, method: :get do %>
  <div class="row" style="padding-top: 60px;">
    <div class="col-md-6 col-md-offset-3">
      <%= text_field_tag :search, params[:search], placeholder: "Où? Destination, ville, adresse",
      class:"form-control" %>
    </div>
    <div class="col-md-2 ">
      <%= submit_tag "Rechercher", class:"btn btn-primary" %>
    </div>
  </div>
<% end %>

</div>
<hr>
<div class="row">
  
  <div class="col-md-2 col-md-offset-1" style="border: 1px solid blue; border-width: 2px 4px;border-radius: 40px; height: 210px;">
    <h1 class="text-center">1</h1>
    <h5 class="text-center" style="padding-top:50px;">Inscrivez vous sur Sporticy et gagnez en visibilité</h5>
  </div>
  <div class="col-md-2 col-md-offset-2" style="border: 1px solid blue; border-width: 2px 4px;border-radius: 40px; height: 210px;">
    <h1 class="text-center">2</h1>
    <h5 class="text-center" style="padding-top:50px;">Obtenez une rémunération après service rendu</h5>
  </div>
  <div class="col-md-2 col-md-offset-2" style="border: 1px solid blue; border-width: 2px 4px;border-radius: 40px; height: 210px;">
    <h1 class="text-center">3</h1>
    <h5 class="text-center" style="padding-top:50px;">Rencontrez des participants qui partagent votre passion</h5>
  </div>

</div>

<div class="col-md-1 col-md-offset-5" style="padding-left: 105px">
  
<%= image_tag "logo_sporticy.png", alt:"logo Sporticy", width: 64, height: 64%>

</div>

<div class="row">
  
</div>

<div class="row">

  <div class="text-center">
  <h3 style="color: black">Vous êtes un passioné de sport? </h3>

  <%= link_to "Proposez votre activité", root_path, { :class=>"navbar-brand" } %>
  </div>
</div>



<div class="row" style="padding-top: 50px; ">
  <div class="col-md-4">
    <h4>Annonces</h4>
  </div>
</div>

<div class="row">
  <% @activities.each do |activity| %>
    <div class="col-md-4">
      <div class="panel panel-defaul">
        <div class="panel-heading preview">
          <%= image_tag activity.photos[0].image.url(:medium) if activity.photos.length > 0 %>
        </div>
        <div class="panel-body">

          <% if activity.price == 0 || activity.price == nil %>
            <p class="home-link"><b> Gratuit <br><%= link_to activity.activity_type, activity_path(activity) %></b>
          <% else %>
            <p class="home-link"><b><%= link_to activity.price, activity_path(activity) %> € <br><%= link_to activity.activity_type, activity_path(activity) %></b>
            <br><%= link_to activity.activity_name                                                                                                                        , activity_path(activity) %></p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
  $(function() {
    $('#date').datepicker({
      dateFormat: 'dd-mm-yy',
      monthNames: ['Janvier','Février','Mars','Avril','Mai','Juin','Juillet','Août',
      'Septembre','Octobre','Novembre','Décembre'],
      dayNamesMin: ['D','L','M','M','J','V','S'],
      minDate: 0,
      maxDate: '3m',
      onSelect: function(selected) {
        var newdate = new Date($("#date").datepicker("getDate"));
        newdate.setDate(newdate.getDate() + 1);
      }
    });
  })
</script>
