<div class="row">
  <div class="col-md-3">
    <%= image_tag avatar_url(@user), class: "avatar-full" %>
      <div class="panel panel-default">
        <div class="panel-heading">Vérification</div>

        <div class="panel-body">
          Email: <%= @user.email %><br>
          Tél: <%= @user.phone_number %>
        </div>
      </div>
  </div>

  <div class="col-md-9">
    <h2><%= @user.fullname %></h2>
    <div class="description row-space-3">
      <%= @user.description %>
    </div>

    <h4>Annonces (<%= @activities.length %>)</h4><br>
    <div class="row">
      <% @activities.each do |activitie| %>
      <div class="col-md-4">
        <div class="panel panel-defaul">
          <div class="panel-heading preview">
            <%= image_tag activitie.photos[0].image.url(:medium) if activitie.photos.length > 0 %>
          </div>
          <div class="panel-body">
            <%= link_to activitie.listing_name, activitie %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
