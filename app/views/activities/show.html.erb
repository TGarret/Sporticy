<div class="panel panel-default">
  <div class="panel-body">
    <!-- Photo principale de l'annonce -->
    <div class="row">
      <div class="col-md-6" style="display:flex; justify-content: center; max-height:400px; max-width: 624px;padding-top: 30px; ">
          <%= image_tag @photos[0].image.url(), class:"img-responsive" if @photos.length >0 %>
      </div>
     <div class="col-md-6" style="padding-left: 30px;">
            <h4><%= @activity.activity_name %></h4><br>
        <div class="informations_activity">
          <div class="informations_activity_1">
            Type d'activité: <br>
             Nombre maximum de participants: <br>
             Compétence développée:<br>
             Durée moyenne de l'activité: <br>
           </div>
        <!-- Informations principales -->
        <div class="informations_activity_2">
          <%= @activity.activity_type %><br>
         <%= @activity.max_participant %><br>
          <%= @activity.competence_developed %><br>
          <%= @activity.duration %><br> 
          <!-- Problème de correspondance, affiche l'id mais pas la durée -->
        </div>
                    </div>
                  </div>


        <div class="col-md-4" style="padding-top: 10px;">
            <!-- Formulaire de réservation -->
            <%= render "reservations/form" %>
        </div>
      </div>

        <!-- Description -->
        <div class="row">
            <div class="col-md-12" style="text-align: center; padding-top: 50px;">
                <h3>A propos de cette activité</h3>
                 par <%= @activity.user.fullname %>
                  <%= image_tag avatar_url(@activity.user), class:"img-circle avatar-large" %>
                <p><%= @activity.description %></p>
            </div>
        </div>
        <br>
        <br>

        

      <!-- Google maps -->
      <div class="container_map">
                <div id="map">
                    <h4> Chope l'adresse: <%= @activity.address %></h4>
                    <br>
                    <div class= "map_unique">
                <script>
                  function initMap() {
                    var uluru = {lat: <%= @activity.latitude %>, lng: <%= @activity.longitude %>};
                    var map = new google.maps.Map(document.getElementById('map'), {
                      zoom: 15,
                      center: uluru
                    });
                    var marker = new google.maps.Marker({
                      position: uluru,
                      map: map
                    });
                  }
                </script>
                <script async defer
                  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyClhT9Do4YID5-zjV_yRTeUP_03L1i5Ud0&callback=initMap">
                </script>
                </div>
              </div>

   <!-- Reviews -->
                    <div class= "activity_comments">
                      <h3>Commentaires <span id="average_rating"></span> (<%=@reviews.count %>)</h3>
                          <%= render "reviews/form" if @booked && !@hasReview %>
                          <%= render "reviews/list" %>
                      </div>
        </div>


        <!-- Carousel -->
            <div class="row">
                <div class="col-md-10 co  l-md-offset-1" style="width:100%; height: 600px; padding-top: 50px; display:flex;justify-content: middle;">
                    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      
                      <!-- Wrapper for slides -->
                      <div class="carousel-inner" role="listbox">
                        <% if @photos %>
                        <% @photos.each do |photo| %>
                        <div class="item <%= 'active' if photo.id == @photos[0].id %>">
                          <%= image_tag photo.image.url() %>
                        </div>
                        <% end %>
                        <% end %>
                      </div>

                      <!-- Left and right controls -->
                      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Précédent</span>
                      </a>
                      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Suivant</span>
                      </a>
                    </div>
                    </div>
                </div>
            </div>

      <h3>A proximité...</h3>
         <div class="row">
             <% for activity in @activity.nearbys(2).limit(3) %>
                <div class="col-md-4">
                    <div class="panel panel-default">
                       <div class="panel-heading preview">
                            <%= image_tag activity.photos[0].image.url(:medium) if activity.photos.length > 0 %>
                       </div>
                       <div class="panel-body">
                         <%= link_to activity.activity_name, activity %><br>
                          (à <%= (activity.distance*1.6).round(2) %> km)
                       </div>
                    </div>
                 </div>
      <% end %>
    </div>
  </div>
</div>


<script>
  $('#average_rating').raty({
    path: '/assets',
    readOnly: true,
    score: <%= @activity.average_rating %>
  });
</script>
